@page
@model HoleyForkingShirt.Pages.Cart.CartModel
@{
    ViewData["Title"] = "Cart";
    Layout = "_Layout";
}

    <main class="checkout">
        <h2 class="subtitle">Cart</h2>

        <div class="container">
            <div class="row">
                @foreach (var item in Model.InCart)
                {
                    <div class="col-4 product">
                        <a asp-page="/Products/Details" asp-route-id="@item.Product.ID">
                            <p>@item.Product.Name (@item.Qty)</p>
                            <p>@item.Product.Price</p>
                        </a>
                    </div>
                }
            </div>
        </div>
        <p>Total: $@Model.Total</p>
        <br />
        <form method="post">
            <button type="submit">Check Out</button>
        </form>
    </main>